{
  "name": "@swarajd/codebusters-ciphers",
  "version": "0.0.6",
  "description": "ciphers for science olympiad's codebusters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json --coverage",
    "docs": "typedoc lib",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/swarajd/codebusters-ciphers.git"
  },
  "keywords": [
    "codebusters",
    "cryptography",
    "ciphers",
    "science",
    "olympiad"
  ],
  "author": "Swaraj Dhumne <swaraj.dhumne@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/swarajd/codebusters-ciphers/issues"
  },
  "homepage": "https://github.com/swarajd/codebusters-ciphers#readme",
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "ts-jest": "^26.4.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.2",
    "typescript": "^3.9.7"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": ["tslint", "prettier --write"]
  }
}
